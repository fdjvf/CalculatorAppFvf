<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uninorte.calculatorapp.MainActivity">

    <TextView
        android:text="0"
        android:layout_width="368dp"
        android:layout_height="71dp"
        android:id="@+id/Result"
        android:textSize="30sp"
        android:textAlignment="textEnd"
        android:fontFamily="sans-serif"
        android:textAllCaps="true"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:id="@+id/B1"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.42"
        android:layout_height="70dp"
        android:onClick="CalculatorAction"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Result"
        style="@style/Widget.AppCompat.Button"
        android:elevation="0dp"
        android:fontFamily="sans-serif-medium" />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:id="@+id/B3"
        android:layout_height="70dp"
        app:layout_constraintLeft_toRightOf="@+id/B2"
        app:layout_constraintBaseline_toBaselineOf="@+id/B2"
        android:onClick="CalculatorAction"
        />

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:id="@+id/B2"
        android:layout_height="70dp"
        app:layout_constraintLeft_toRightOf="@+id/B1"
        app:layout_constraintBaseline_toBaselineOf="@+id/B1"

        android:onClick="CalculatorAction"/>

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:id="@+id/B5"
        android:layout_height="70dp"
        app:layout_constraintRight_toRightOf="@+id/B2"
        app:layout_constraintBaseline_toBaselineOf="@+id/B4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/B2"
        android:onClick="CalculatorAction"
        />

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:id="@+id/B6"
        android:layout_height="70dp"
        app:layout_constraintRight_toRightOf="@+id/B3"
        app:layout_constraintLeft_toLeftOf="@+id/B3"
        app:layout_constraintBaseline_toBaselineOf="@+id/B5"
        android:onClick="CalculatorAction"
        />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:id="@+id/B4"
        app:layout_constraintLeft_toLeftOf="@+id/B1"
        app:layout_constraintTop_toBottomOf="@+id/B1"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/B1"
        android:onClick="CalculatorAction"

        />

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:id="@+id/B7"
        android:layout_height="70dp"
        app:layout_constraintLeft_toLeftOf="@+id/B4"
        app:layout_constraintRight_toRightOf="@+id/B4"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/B4"
        android:onClick="CalculatorAction"/>

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:id="@+id/B8"
        android:layout_height="70dp"
        app:layout_constraintLeft_toLeftOf="@+id/B5"
        app:layout_constraintRight_toRightOf="@+id/B5"
        app:layout_constraintBaseline_toBaselineOf="@+id/B7"

        android:onClick="CalculatorAction"/>

    <Button
        android:text="+"
        android:id="@+id/Suma"
        tools:text="+"
        android:layout_height="70dp"
        app:layout_constraintLeft_toLeftOf="@+id/B7"
        android:layout_width="134dp"
        android:onClick="CalculatorAction"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/B0" />

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:id="@+id/B9"
        android:layout_height="70dp"
        app:layout_constraintRight_toRightOf="@+id/B6"
        app:layout_constraintLeft_toLeftOf="@+id/B6"
        app:layout_constraintBaseline_toBaselineOf="@+id/B8"
        android:onClick="CalculatorAction"
        />

    <Button
        android:id="@+id/Division"
        android:layout_height="70dp"
        android:text="/"
        app:layout_constraintBaseline_toBaselineOf="@+id/Suma"
        app:layout_constraintRight_toRightOf="@+id/B6"
        android:layout_width="134dp"
        android:onClick="CalculatorAction"
        />

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:id="@+id/Igual"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:layout_height="148dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Result"
        app:layout_constraintLeft_toRightOf="@+id/B6"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:onClick="CalculatorAction"
        />

    <Button
        android:text="CE"
        android:layout_width="wrap_content"
        android:layout_height="228dp"
        app:layout_constraintRight_toRightOf="@+id/Igual"
        app:layout_constraintLeft_toRightOf="@+id/B3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/B6"
        android:onClick="CalculatorAction"
        android:id="@+id/button28" />

    <Button
        android:text="0"
        android:layout_width="134dp"
        android:layout_height="70dp"
        android:id="@+id/B0"
        android:onClick="CalculatorAction"
        app:layout_constraintLeft_toLeftOf="@+id/B7"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/B7" />

    <Button
        android:text="."
        android:layout_width="134dp"
        android:layout_height="70dp"
        android:id="@+id/Coma"
        app:layout_constraintBaseline_toBaselineOf="@+id/B0"
        app:layout_constraintRight_toRightOf="@+id/B6" />

</android.support.constraint.ConstraintLayout>
